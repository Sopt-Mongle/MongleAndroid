<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activity.WritingSentenceActivity"
    >


    <ImageView
        android:id="@+id/activity_writing_sentence_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:backgroundTint="@color/white"
        android:tint="@color/veryLightPink2"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="문장 쓰기"
        android:textSize="19sp"
        android:textColor="@color/black2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_writing_sentence_btn_back"
        app:layout_constraintBottom_toBottomOf="@+id/activity_writing_sentence_btn_back"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/veryLightPink4"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/activity_writing_sentence_btn_back"
        app:layout_constraintBottom_toTopOf="@+id/activity_writing_sentence_tv_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"/>
    <View
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"/>
    <View
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"/>






    <TextView
        android:id="@+id/activity_writing_sentence_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="19sp"
        android:text="마음에 드는 "
        android:textColor="@color/greyish_brown"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/activity_writing_sentence_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textColor="@color/softGreen"
        android:text="한 문장"
        app:layout_constraintTop_toTopOf="@id/activity_writing_sentence_tv_1"
        app:layout_constraintStart_toEndOf="@id/activity_writing_sentence_tv_1"
        />
    <TextView
        android:id="@+id/activity_writing_sentence_tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="을 적어주세요!"
        android:textColor="@color/greyish_brown"
        app:layout_constraintTop_toTopOf="@id/activity_writing_sentence_tv_1"
        app:layout_constraintStart_toEndOf="@+id/activity_writing_sentence_tv_2"
        />


    <EditText
        android:id="@+id/activity_writing_sentence_et"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/activity_writing_sentence_tv_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintCircleRadius="10dp"
        android:background="@drawable/et_area"
        android:hint="최대 280자까지 입력 가능하며, 책의 문장을 임의로 변형하지 않게 주의해주세요!"
        android:gravity="start"
        android:padding="14dp"
        />

    <View
        android:id="@+id/activity_writing_sentence_btn_next"
        android:layout_width="348dp"
        android:layout_height="58dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_writing_sentence_et" />

    <TextView
        android:id="@+id/activity_writing_sentence_tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textSize="19sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/activity_writing_sentence_btn_next"
        app:layout_constraintEnd_toEndOf="@+id/activity_writing_sentence_btn_next"
        app:layout_constraintStart_toStartOf="@+id/activity_writing_sentence_btn_next"
        app:layout_constraintTop_toBottomOf="@+id/activity_writing_sentence_et" />




</androidx.constraintlayout.widget.ConstraintLayout>