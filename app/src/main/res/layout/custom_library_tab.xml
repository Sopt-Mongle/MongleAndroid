<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/library_thema_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="47"
        android:textColor="@color/selector_library_tab_click"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/library_thema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테마"
        android:textColor="@color/selector_library_tab_click"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/library_thema_num"
        app:layout_constraintStart_toStartOf="@id/library_thema_num"
        app:layout_constraintTop_toBottomOf="@id/library_thema_num"
        app:layout_constraintVertical_bias="0" />

    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:background="#e7e7e7"
        app:layout_constraintBottom_toBottomOf="@id/library_thema"
        app:layout_constraintEnd_toStartOf="@id/library_sentence_num"
        app:layout_constraintStart_toEndOf="@id/library_thema_num"
        app:layout_constraintTop_toTopOf="@id/library_thema_num" />

    <TextView
        android:id="@+id/library_sentence_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="36"
        android:textColor="@color/selector_library_tab_click"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/library_thema_num"
        app:layout_constraintEnd_toStartOf="@id/line2"
        app:layout_constraintStart_toEndOf="@id/line1"
        app:layout_constraintTop_toTopOf="@id/library_thema_num" />

    <TextView
        android:id="@+id/library_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문장"
        android:textColor="@color/selector_library_tab_click"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/library_sentence_num"
        app:layout_constraintStart_toStartOf="@id/library_sentence_num"
        app:layout_constraintTop_toBottomOf="@id/library_sentence_num"
        app:layout_constraintVertical_bias="0" />

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:background="#e7e7e7"
        app:layout_constraintBottom_toBottomOf="@id/line1"
        app:layout_constraintEnd_toStartOf="@id/library_curator_num"
        app:layout_constraintStart_toEndOf="@id/library_sentence_num"
        app:layout_constraintTop_toTopOf="@id/line1" />

    <TextView
        android:id="@+id/library_curator_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textColor="@color/selector_library_tab_click"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/library_sentence_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/line2"
        app:layout_constraintTop_toTopOf="@id/library_sentence_num" />

    <TextView
        android:id="@+id/library_curator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="큐레이터"
        android:textColor="@color/selector_library_tab_click"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/library_curator_num"
        app:layout_constraintStart_toStartOf="@id/library_curator_num"
        app:layout_constraintTop_toBottomOf="@id/library_curator_num"
        app:layout_constraintVertical_bias="0" />


</androidx.constraintlayout.widget.ConstraintLayout>