<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.JoinActivity">

    <ImageView
        android:id="@+id/activity_join_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="17dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:src="@drawable/ic_close"
        android:tint="@color/veryLightPink2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_join_btn_close">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/login_img_mongle_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="7sp"
                android:text="몽글"
                android:textColor="#3e3e3e"
                android:textSize="23sp"
                app:layout_constraintStart_toStartOf="@+id/imageView24"
                app:layout_constraintTop_toBottomOf="@+id/imageView24" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="7sp"
                android:text="에"
                android:textColor="#717171"
                android:textSize="23sp"
                app:layout_constraintStart_toEndOf="@+id/textView26"
                app:layout_constraintTop_toTopOf="@+id/textView26" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="7sp"
                android:text="가입하기"
                android:textColor="#717171"
                android:textSize="23sp"
                app:layout_constraintStart_toStartOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/textView26" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:text="이메일"
                android:textColor="@color/greyish_brown"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView28"
                app:layout_constraintTop_toBottomOf="@+id/textView28" />

            <EditText
                android:id="@+id/activity_join_et_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/et_area"
                android:ems="10"
                android:hint="이메일 주소를 입력해주세요."
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView31"
                app:layout_constraintTop_toBottomOf="@+id/textView31" />

            <ImageView
                android:id="@+id/activity_join_img_email_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/activity_join_et_email"
                app:layout_constraintTop_toBottomOf="@id/activity_join_et_email"
                app:srcCompat="@drawable/warning" />


            <TextView
                android:id="@+id/activity_join_tv_email_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="1sp"
                android:text="이메일 주소를 입력해주세요!"
                android:textColor="#cf3232"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/activity_join_img_email_warning"
                app:layout_constraintStart_toEndOf="@+id/activity_join_img_email_warning"
                app:layout_constraintTop_toTopOf="@+id/activity_join_img_email_warning" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:text="비밀번호"
                android:textColor="@color/greyish_brown"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/activity_join_et_email"
                app:layout_constraintTop_toBottomOf="@+id/activity_join_img_email_warning" />

            <EditText
                android:id="@+id/activity_join_et_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_area"
                android:ems="10"
                android:hint="비밀번호를 입력해주세요."
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                app:layout_constraintEnd_toEndOf="@+id/activity_join_et_email"
                app:layout_constraintStart_toStartOf="@+id/textView34"
                app:layout_constraintTop_toBottomOf="@+id/textView34" />

            <EditText
                android:id="@+id/activity_join_et_passcheck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/et_area"
                android:ems="10"
                android:hint="비밀번호를 한 번 더 확인해주세요."
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                app:layout_constraintEnd_toEndOf="@+id/activity_join_et_pass"
                app:layout_constraintStart_toStartOf="@+id/activity_join_et_pass"
                app:layout_constraintTop_toBottomOf="@+id/activity_join_et_pass" />

            <ImageView
                android:id="@+id/activity_join_img_pass_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/activity_join_et_passcheck"
                app:layout_constraintTop_toBottomOf="@+id/activity_join_et_passcheck"
                app:srcCompat="@drawable/my_settings_profile_name_possible_ic_possible" />

            <TextView
                android:id="@+id/activity_join_tv_pass_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="1sp"
                android:text="비밀번호가 일치해요!"
                android:textColor="@color/softGreen"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/activity_join_img_pass_ok"
                app:layout_constraintStart_toEndOf="@+id/activity_join_img_pass_ok"
                app:layout_constraintTop_toTopOf="@+id/activity_join_img_pass_ok" />

            <ImageView
                android:id="@+id/activity_join_img_pass_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/activity_join_et_passcheck"
                app:layout_constraintTop_toBottomOf="@+id/activity_join_et_passcheck"
                app:srcCompat="@drawable/warning" />

            <TextView
                android:id="@+id/activity_join_tv_pass_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="1sp"
                android:text="비밀번호를 입력해주세요!"
                android:textColor="#cf3232"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/activity_join_img_pass_warning"
                app:layout_constraintStart_toEndOf="@+id/activity_join_img_pass_warning"
                app:layout_constraintTop_toTopOf="@+id/activity_join_img_pass_warning" />

            <TextView
                android:id="@+id/activity_join_tv_passck_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="1sp"
                android:text="비밀번호를 한 번 더 입력해주세요!"
                android:textColor="#cf3232"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/activity_join_img_pass_warning"
                app:layout_constraintStart_toEndOf="@+id/activity_join_img_pass_warning"
                app:layout_constraintTop_toTopOf="@+id/activity_join_img_pass_warning" />

            <TextView
                android:id="@+id/activity_join_tv_nomatch_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="1sp"
                android:text="비밀번호가 일치하지 않아요!"
                android:textColor="#cf3232"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/activity_join_img_pass_warning"
                app:layout_constraintStart_toEndOf="@+id/activity_join_img_pass_warning"
                app:layout_constraintTop_toTopOf="@+id/activity_join_img_pass_warning" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:text="닉네임"
                android:textColor="@color/greyish_brown"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/activity_join_et_passcheck"
                app:layout_constraintTop_toBottomOf="@+id/activity_join_et_passcheck" />

            <EditText
                android:id="@+id/activity_join_et_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/et_area"
                android:ems="10"
                android:hint="닉네임을 6자 이내로 입력해주세요."
                android:inputType="textPersonName"
                android:maxLength="6"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/activity_join_et_email"
                app:layout_constraintStart_toStartOf="@+id/textView35"
                app:layout_constraintTop_toBottomOf="@+id/textView35" />

            <TextView
                android:id="@+id/activity_join_tv_nickname_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="end"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="2sp"
                android:text="0"
                android:textColor="@color/veryLightPink2"
                android:textSize="13sp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/activity_join_tv_nickname_cnt_max"
                app:layout_constraintTop_toBottomOf="@id/activity_join_et_nickname" />

            <TextView
                android:id="@+id/activity_join_tv_nickname_cnt_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="2sp"
                android:text="/6"
                android:textColor="@color/veryLightPink2"
                android:textSize="13sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/activity_join_tv_nickname_cnt"
                app:layout_constraintEnd_toEndOf="@id/activity_join_et_nickname"
                app:layout_constraintTop_toTopOf="@+id/activity_join_tv_nickname_cnt" />

            <ImageView
                android:id="@+id/activity_join_img_nickname_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/activity_join_et_nickname"
                app:layout_constraintTop_toBottomOf="@+id/activity_join_et_nickname"
                app:srcCompat="@drawable/warning" />

            <TextView
                android:id="@+id/activity_join_tv_nickname_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="1sp"
                android:text="닉네임을 입력해주세요!"
                android:textColor="#cf3232"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/activity_join_img_nickname_warning"
                app:layout_constraintStart_toEndOf="@+id/activity_join_img_nickname_warning"
                app:layout_constraintTop_toTopOf="@+id/activity_join_img_nickname_warning" />

            <TextView
                android:id="@+id/activity_join_tv_exist_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="1sp"
                android:text="이미 사용 중인 닉네임이에요!"
                android:textColor="#cf3232"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/activity_join_img_nickname_warning"
                app:layout_constraintStart_toEndOf="@+id/activity_join_img_nickname_warning"
                app:layout_constraintTop_toTopOf="@+id/activity_join_img_nickname_warning" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/activity_join_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_green"
            android:gravity="center_vertical"
            android:paddingTop="15dp"
            android:paddingBottom="14dp"
            android:text="가입하기"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="RtlCompat" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>