<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/library_tab_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="47"
        android:textColor="@color/selector_library_tab_click"
        android:textSize="29sp"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="14sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/notosanscjkkr_demilight"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toTopOf="@id/library_tab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/library_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테마"
        android:textColor="@color/selector_library_tab_click"
        android:textSize="14sp"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="6sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/notosanscjkkr_demilight"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/library_tab_num"
        app:layout_constraintStart_toStartOf="@id/library_tab_num"
        app:layout_constraintTop_toBottomOf="@id/library_tab_num"
        app:layout_constraintVertical_bias="0" />

</androidx.constraintlayout.widget.ConstraintLayout>