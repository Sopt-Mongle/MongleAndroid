<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_result_sentence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/result_sentence_tv_themename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="2sp"
            android:textColor="#bcbcbc"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/cl_result_sentence"
            app:layout_constraintTop_toTopOf="@id/cl_result_sentence"
            tools:text="번아웃을 극복하고 싶을 때 봐야하는 문장" />

        <TextView
            android:id="@+id/result_sentence_tv_context"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/result_sentence_guide_right"
            app:layout_constraintStart_toStartOf="@+id/result_sentence_tv_themename"
            app:layout_constraintTop_toBottomOf="@+id/result_sentence_tv_themename"
            tools:text="결국 봄이 언제나 찾아왔지만, 하마터면 오지 않을 뻔 했던 봄을 생각하면 마음이 섬찟해진다. " />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/result_sentence_guide_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#59bcbcbc"
            app:layout_constraintBottom_toBottomOf="@id/cl_result_sentence"
            app:layout_constraintEnd_toEndOf="@id/cl_result_sentence"
            app:layout_constraintStart_toStartOf="@id/cl_result_sentence" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>