<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">

        <shape>
            <size android:width="62dp" android:height="29dp" />

            <solid android:color="@color/softGreen" />
            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="15dp" />
        </shape>
    </item>

    <item android:state_checked="true">

        <shape>
            <size android:width="62dp" android:height="29dp" />
            <solid android:color="@color/brownGrey" />

            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="15dp" />
        </shape>
    </item>
</selector>